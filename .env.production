# HD현대미포 Gauss-1 RAG System - Production Configuration
# Author: Claude Code
# Date: 2024-01-22

# =============================================================================
# Server Configuration
# =============================================================================
RAG_HOST=0.0.0.0
RAG_PORT=8080
RAG_WORKERS=4
RAG_RELOAD=false
RAG_LOG_LEVEL=info
RAG_ACCESS_LOG=true
RAG_ENVIRONMENT=production

# Performance Settings
RAG_LOOP=uvloop
RAG_HTTP=httptools
RAG_WS=websockets
RAG_LIFESPAN=auto

# =============================================================================
# Application Configuration
# =============================================================================
RAG_DEBUG=false
RAG_VERBOSE=false

# Ollama API Configuration
RAG_OLLAMA_URL=http://127.0.0.1:11434/api/chat

# =============================================================================
# Qdrant Configuration
# =============================================================================
# Mail Documents
RAG_MAIL_QDRANT_HOST=127.0.0.1
RAG_MAIL_QDRANT_PORT=6333

# General Documents
RAG_DOC_QDRANT_HOST=127.0.0.1
RAG_DOC_QDRANT_PORT=6333

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30

# API Key Authentication
API_KEY_HEADER=X-API-Key
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# System Monitoring
MONITOR_INTERVAL=30
MONITOR_CPU_THRESHOLD=80
MONITOR_MEMORY_THRESHOLD=85
MONITOR_DISK_THRESHOLD=90

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis Configuration (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Memory Cache Settings
MEMORY_CACHE_SIZE=1000
CACHE_TTL=3600

# =============================================================================
# Performance Optimization
# =============================================================================
# GPU Configuration
USE_GPU=true
GPU_DEVICE=auto
GPU_MEMORY_FRACTION=0.8

# Parallel Processing
MAX_WORKERS=4
PARALLEL_EMBEDDING=true
PARALLEL_SEARCH=true

# =============================================================================
# SSL Configuration (Production)
# =============================================================================
# SSL Certificate Paths (uncomment and configure for HTTPS)
# RAG_SSL_KEYFILE=/path/to/private.key
# RAG_SSL_CERTFILE=/path/to/certificate.crt

# =============================================================================
# Database Configuration
# =============================================================================
# If using database for user management, chat history, etc.
# DATABASE_URL=postgresql://user:password@localhost:5432/rag_system
# DATABASE_POOL_SIZE=20
# DATABASE_POOL_OVERFLOW=10

# =============================================================================
# External Services
# =============================================================================
# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true

# S3/Object Storage (for file uploads)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_WEBSOCKET=true
ENABLE_API_V2=true
ENABLE_MONITORING=true
ENABLE_SECURITY=true
ENABLE_CACHING=true

# =============================================================================
# Backup & Recovery
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/rag-system

# =============================================================================
# Deployment Settings
# =============================================================================
# Container Settings (if using Docker)
CONTAINER_NAME=rag-system
CONTAINER_RESTART_POLICY=unless-stopped

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3