# HD현대미포 Gauss-1 RAG System - Development Configuration
# Author: Claude Code
# Date: 2024-01-22

# =============================================================================
# Server Configuration
# =============================================================================
RAG_HOST=127.0.0.1
RAG_PORT=8080
RAG_WORKERS=1
RAG_RELOAD=true
RAG_LOG_LEVEL=debug
RAG_ACCESS_LOG=true
RAG_ENVIRONMENT=development

# Performance Settings (optimized for development)
RAG_LOOP=auto
RAG_HTTP=auto
RAG_WS=auto
RAG_LIFESPAN=auto

# =============================================================================
# Application Configuration
# =============================================================================
RAG_DEBUG=true
RAG_VERBOSE=true

# Ollama API Configuration
RAG_OLLAMA_URL=http://127.0.0.1:11434/api/chat

# =============================================================================
# Qdrant Configuration
# =============================================================================
# Mail Documents
RAG_MAIL_QDRANT_HOST=127.0.0.1
RAG_MAIL_QDRANT_PORT=6333

# General Documents
RAG_DOC_QDRANT_HOST=127.0.0.1
RAG_DOC_QDRANT_PORT=6333

# =============================================================================
# Security Configuration (Development)
# =============================================================================
# JWT Settings (use weak keys for development)
JWT_SECRET_KEY=dev-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
JWT_REFRESH_EXPIRE_DAYS=7

# API Key Authentication
API_KEY_HEADER=X-API-Key
VALID_API_KEYS=dev-key-1,dev-key-2,test-key

# CORS Configuration (permissive for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
CORS_CREDENTIALS=true

# Rate Limiting (relaxed for development)
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# System Monitoring (more frequent for development)
MONITOR_INTERVAL=10
MONITOR_CPU_THRESHOLD=90
MONITOR_MEMORY_THRESHOLD=90
MONITOR_DISK_THRESHOLD=95

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis Configuration (optional for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_SSL=false

# Memory Cache Settings (smaller for development)
MEMORY_CACHE_SIZE=500
CACHE_TTL=1800

# =============================================================================
# Performance Optimization
# =============================================================================
# GPU Configuration (auto-detect for development)
USE_GPU=auto
GPU_DEVICE=auto
GPU_MEMORY_FRACTION=0.6

# Parallel Processing (reduced for development)
MAX_WORKERS=2
PARALLEL_EMBEDDING=true
PARALLEL_SEARCH=false

# =============================================================================
# SSL Configuration (Development - typically disabled)
# =============================================================================
# SSL Certificate Paths (usually not needed for development)
# RAG_SSL_KEYFILE=
# RAG_SSL_CERTFILE=

# =============================================================================
# Database Configuration
# =============================================================================
# Development database (if using database)
# DATABASE_URL=sqlite:///dev_rag_system.db
# DATABASE_POOL_SIZE=5
# DATABASE_POOL_OVERFLOW=5

# =============================================================================
# External Services
# =============================================================================
# Email Configuration (disabled for development)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_TLS=false

# S3/Object Storage (local storage for development)
# S3_BUCKET=dev-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_WEBSOCKET=true
ENABLE_API_V2=true
ENABLE_MONITORING=true
ENABLE_SECURITY=false
ENABLE_CACHING=true

# =============================================================================
# Development Tools
# =============================================================================
# Hot Reload Settings
AUTO_RELOAD=true
RELOAD_DIRS=backend,frontend
RELOAD_EXTENSIONS=.py,.js,.html,.css

# Debug Settings
ENABLE_DEBUG_ROUTES=true
ENABLE_PROFILING=true
LOG_SQL_QUERIES=true

# Testing Settings
RUN_TESTS_ON_START=false
TEST_DATABASE_URL=sqlite:///test_rag_system.db

# =============================================================================
# Backup & Recovery (Disabled for Development)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_INTERVAL=0
BACKUP_RETENTION_DAYS=0
BACKUP_PATH=/tmp/rag-system-dev-backup

# =============================================================================
# Development Helpers
# =============================================================================
# Mock External Services
MOCK_EXTERNAL_APIS=false
MOCK_EMAIL_SERVICE=true
MOCK_STORAGE_SERVICE=false

# Performance Testing
LOAD_TEST_MODE=false
SIMULATE_SLOW_RESPONSES=false
RESPONSE_DELAY_MS=0